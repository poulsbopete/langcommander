Resources:
  sslListener:
    Type: AWS::ElasticLoadBalancingV2::Listener
    Properties:
      # Listen on HTTPS port
      Port: 443
      Protocol: HTTPS
      # Reference the EB environment's ALB
      LoadBalancerArn:
        Ref: AWSEBLoadBalancer
      # Replace with your ACM certificate ARN
      Certificates:
        - CertificateArn: "<your_certificate_arn_here>"
      # Forward traffic to the default target group
      DefaultActions:
        - Type: forward
          TargetGroupArn:
            Ref: AWSEBTargetGroup